          </group><!-- /end-station -->

        </group> <!-- /cooling -->

        <group name="picoammeter">

          <dataset name="picoammeter_scan_rate" source="ndattribute" ndattribute="PICOSCANRATE" when="OnFileClose">
            <attribute name="units" source="constant" value="s" type="string" />
          </dataset>

          <dataset name="picoammeter_scan_ch1" source="ndattribute" ndattribute="PICOSCANCH1" when="OnFileClose">
            <attribute name="units" source="constant" value="mA" type="string" />
          </dataset>

          <dataset name="picoammeter_scan_ch2" source="ndattribute" ndattribute="PICOSCANCH2" when="OnFileClose">
            <attribute name="units" source="constant" value="mA" type="string" />
          </dataset>
          <dataset name="picoammeter_scan_ch3" source="ndattribute" ndattribute="PICOSCANCH3" when="OnFileClose">
            <attribute name="units" source="constant" value="mA" type="string" />
          </dataset>
          <dataset name="picoammeter_scan_ch4" source="ndattribute" ndattribute="PICOSCANCH4" when="OnFileClose">
            <attribute name="units" source="constant" value="mA" type="string" />
          </dataset>

          <dataset name="picoammeter_ch1_offset" source="ndattribute" ndattribute="PICOCH1OFFSET" when="OnFileClose">
            <attribute name="units" source="constant" value="mA" type="string" />
          </dataset>

          <dataset name="picoammeter_ch2_offset" source="ndattribute" ndattribute="PICOCH2OFFSET" when="OnFileClose">
            <attribute name="units" source="constant" value="mA" type="string" />
          </dataset>

          <dataset name="picoammeter_ch3_offset" source="ndattribute" ndattribute="PICOCH3OFFSET" when="OnFileClose">
            <attribute name="units" source="constant" value="mA" type="string" />
