            <attribute name="units" source="constant" value="mA" type="string" />
          </dataset>
          <dataset name="picoammeter_range_legend" source="constant" value="0: 2.5 milliamps, 1: 2.5 microamps, 2: 2.5 nanoamps" type="string" when="OnFileClose" />
          <dataset name="picoammeter_channels_legend" source="constant" value="0: xbpm top, 1: 2.5 xbpm_bottom, 2: wire scanner, 3: empty" type="string" when="OnFileClose" />

          <dataset name="picoammeter_hvs" source="ndattribute" ndattribute="PICOHVS" when="OnFileClose">
            <attribute name="units" source="constant" value="V" type="string" />
