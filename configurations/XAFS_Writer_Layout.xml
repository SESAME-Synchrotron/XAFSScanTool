        </group><!-- /picoammeter -->

             
        <group name="sample_motor_stack">
          <dataset name="sample_motor_stack_name" source="constant" value="TOMCAT_endstation" type="string" when="OnFileClose" />
          <!--
          <dataset name="detector_distance" source="ndattribute" ndattribute="CameraDistance" when="OnFileClose">        
            <attribute name="units" source="constant" value="mm" type="string" />
          </dataset>
        -->
          <group name="setup">
            <dataset name="sample_pitch" source="ndattribute" ndattribute="SamplePitch" when="OnFileClose"> 
              <attribute name="units" source="constant" value="deg" type="string" />
            </dataset>
            <!-- <dataset name="sample_roll" source="ndattribute" ndattribute="SampleRoll" when="OnFileClose"> 
              <attribute name="units" source="constant" value="deg" type="string" />
            </dataset> -->
            <dataset name="sample_x" source="ndattribute" ndattribute="SampleX" when="OnFileClose"> 
              <attribute name="units" source="constant" value="mm" type="string" />
            </dataset>
            <dataset name="sample_y" source="ndattribute" ndattribute="SampleY" when="OnFileClose"> 
              <attribute name="units" source="constant" value="mm" type="string" />
            </dataset>
            <dataset name="sample_rot" source="ndattribute" ndattribute="SampleRotation" when="OnFileClose"> 
              <attribute name="units" source="constant" value="deg" type="string" />
            </dataset>
            <dataset name="sample_sx" source="ndattribute" ndattribute="SampleXCent" when="OnFileClose"> 
              <attribute name="units" source="constant" value="micro meter" type="string" />
            </dataset>
            <dataset name="sample_sz" source="ndattribute" ndattribute="SampleZCent" when="OnFileClose"> 
              <attribute name="units" source="constant" value="micro meter" type="string" />
            </dataset>
          </group><!-- /setup -->
        </group><!-- /sample -->

        <group name="detector_motor_stack">
          <!-- <dataset name="camera_stage_motor_stack_name" source="constant" value="BEATS camera stage motor stack" type="string" when="OnFileClose" />       -->  
          <dataset name="detector_x" source="ndattribute" ndattribute="DetectorStageX" when="OnFileClose"> 
              <attribute name="units" source="constant" value="mm" type="string" />
            </dataset>
            <dataset name="detector_z" source="ndattribute" ndattribute="DetectorStageZ" when="OnFileClose"> 
              <attribute name="units" source="constant" value="mm" type="string" />
            </dataset>

          <group name="detector1_setup">
            <dataset name="detector_y" source="ndattribute" ndattribute="Detector1StageY" when="OnFileClose"> 
              <attribute name="units" source="constant" value="mm" type="string" />
            </dataset>
            <dataset name="detector_FOC1" source="ndattribute" ndattribute="Detector1StageFOC1" when="OnFileClose"> 
